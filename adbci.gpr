project ADBCI is

   for Source_Dirs use ("src/**");
   for Object_Dir use "bld";
   for Library_Ali_Dir use "lib";
   for Library_Dir use "lib";
   for Library_Kind use "dynamic";
   for Library_Name use "adbci";
   for Library_Version use "libadbci.so.2";

   package Compiler is
      for Default_Switches ("ada") use ("-gnatwa", "-gnat05", "-gnatf", "-g");
   end Compiler;

end ADBCI;

